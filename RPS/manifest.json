{
  "manifest_version": 3,
  "name": "Rock Paper Scissors",
  "version": "1.1",
  "description": "Play Rock Paper Scissors directly from your Chrome toolbar â€” now with score tracking!",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "RPS.png",
      "48": "RPS.png",
      "128": "RPS.png"
    }
  },
  "icons": {
    "16": "RPS.png",
    "48": "RPS.png",
    "128": "RPS.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "images/*" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
